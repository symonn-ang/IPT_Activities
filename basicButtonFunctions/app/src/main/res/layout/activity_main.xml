<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Title Text -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press any button you want"
        android:textSize="24sp"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"/>

    <!-- Subtext -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="and see the magic!"
        android:textColor="#BD3B00"
        android:textSize="34sp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/superButtton1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#D78080"
        android:text="Button 1"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="64dp" />

    <Button
        android:id="@+id/superButtton2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#D78080"
        android:text="Button 2"
        app:layout_constraintTop_toBottomOf="@id/superButtton1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="64dp" />

    <Button
        android:id="@+id/superButtton3"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#D78080"
        android:text="Button 3"
        app:layout_constraintTop_toBottomOf="@id/superButtton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="64dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
